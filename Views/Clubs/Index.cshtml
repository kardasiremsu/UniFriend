@model UniFriend.Models.ClubsPageModel
@{
    ViewBag.Title = "Clubs";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Clubs</title>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/Clubs/GetClubs.js"></script>
    <link rel="stylesheet" href="~/Content/Network.css">
</head>

    <div style="box-sizing: border-box; display: flex;flex-direction: column; align-items:center; justify-content: center">
        <div>
            <h2>Find Your Club Friend</h2>
        </div>

        <div style="margin-top: 15px">
            <div style="margin-top: 15px ">
                <select class="form-select" id="ClubList" style="display: block; width: 400px"></select>
            </div>
        </div>
       
        <div style="margin-top: 15px ">
            <select class="form-select" id="clubStudents" style="display: none; width: 400px"></select>
        </div>

        <div style="margin-top: 15px ">
            <button type="button" class="btn btn-outline-primary" id="AddButton" style="display: block; width: 200px">Add Friend</button>
        </div>

        <div style="margin-top: 15px ">
            <p id="ClubsMessage" style="display: none; width: 400px"></p>
        </div>

    </div>
    <script src="https://www.markuptag.com/bootstrap/5/js/bootstrap.bundle.min.js"></script>
