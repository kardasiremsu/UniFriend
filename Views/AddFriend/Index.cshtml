@model UniFriend.Models.AddFriendPageModel
@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://www.markuptag.com/bootstrap/5/css/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/AddFriend/GetSelection.js"></script>
</head>
<body>

    <div style="box-sizing: border-box; display: flex;flex-direction: column; align-items:center; justify-content: center">
        <div>
            <h2>Find Your Friend</h2>
            @Model.userid
        </div>

        <div style="margin-top: 15px">
            <select class="form-select" id="studentFacultyList" style="display: block; width: 400px"></select>
        </div>

        <div style="margin-top: 15px ">
            <select class="form-select" id="studentDepartmentList" style="display: none; width: 400px"></select>
        </div>

        <div style="margin-top: 15px ">
            <select class="form-select" id="studentLectureList" style="display: none; width: 400px"></select>
        </div>

        <div style="margin-top: 15px ">
            <select class="form-select" id="studentCRNList" style="display: none; width: 400px"></select>
        </div>

        <div style="margin-top: 15px ">
            <select class="form-select" id="studentList" style="display: none; width: 400px"></select>
        </div>

        <div style="margin-top: 15px ">
            <button type="button" class="btn btn-outline-primary" id="AddButton" style="display: block; width: 200px">Add Friend</button>
        </div>

        <div style="margin-top: 15px     ">
            <p id="addmessage" style="display: none; width: 400px"></p>
        </div>
</div>

    <script src="https://www.markuptag.com/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</body>
</html>

