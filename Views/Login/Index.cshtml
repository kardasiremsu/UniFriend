
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>MVC Test</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://www.markuptag.com/bootstrap/5/css/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/Login/Login.js"></script>
</head>
<body>

    <div id="loginContainer" class="container">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="login-form bg-light mt-4 p-4">
                    <form action="" method="" class="row g-3">
                        <h4>Welcome</h4>
                        <div class="col-12">
                            <label>E-mail</label>
                            <input type="text" name="mail" class="form-control" placeholder="E-Mail" id="mail">
                        </div>
                        <div class="col-12">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" placeholder="Password" id="password">
                        </div>
                        <div class="col-12">
                            <button type="button" class="btn btn-dark float-end" id="loginBtn">Login</button>
                        </div>
                    </form>
                    <hr class="mt-4">
                    <div class="col-12">
                        <p class="text-center mb-0" >Have not account yet? <a id="registerClick" style="color:blue"><u>Register</u></a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="registerContainer" class="container" style="display:none">
        <div class="row"> 
            <div class="col-md-4 offset-md-4">
                <div class="login-form bg-light mt-4 p-4">
                    <form action="" method="" class="row g-3">
                        <h4>Welcome</h4>
                        <div class="col-12">
                            <label>E-mail</label>
                            <input type="text" class="form-control" placeholder="E-Mail" id="mailRegister">
                        </div>
                        <div class="col-12">
                            <label>Password</label>
                            <input type="password" class="form-control" placeholder="Password" id="password1">
                        </div>
                        <div class="col-12">
                            <label>Password</label>
                            <input type="password" class="form-control" placeholder="Password" id="password2">
                        </div>

                        <div class="col-12">
                            <button type="button" class="btn btn-dark float-end" id="registerBtn">Register</button>
                        </div>
                    </form>
                    <hr class="mt-4">
                    <div class="col-12">
                        <p class="text-center mb-0">Already have <a id="loginClick" style="color:blue; "><u>Login</u></a></p>
                    </div>
                </div>
            </div>
        </div>



    </div>


    <!-- Bootstrap JS -->
    <script src="https://www.markuptag.com/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</body>
</html>